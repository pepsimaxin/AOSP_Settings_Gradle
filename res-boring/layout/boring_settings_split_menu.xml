<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical">
            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_accounts"
                android:text="账号" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_control"
                android:text="家居控制" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_display"
                android:text="显示" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_wifi"
                android:text="无线网络" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_bluetooth"
                android:text="蓝牙" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_notification"
                android:text="通知管理" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_settings"
                android:text="通用设置" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_wake_and_call"
                android:text="唤醒与对话" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_storage"
                android:text="空间管理" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_permission"
                android:text="撤销授权" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_ota"
                android:text="软件更新" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_reset"
                android:text="恢复出厂设置" />

            <TextView
                style="@style/BoringSplitMenuTitle"
                android:id="@+id/menu_about"
                android:text="关于与帮助" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>